{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "lib": [
      "es2018",
      "es2015",
      "es5",
      "es6",
      "dom",
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "jsx": "preserve",
    "pretty": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "paths": {
      "src/*": [
        "src/*"
      ],
      "Common/*": [
        "src/Components/Common/*"
      ],
      "__tests__/*": [
        "__tests__/*"
      ],
      "stories/*": [
        "stories/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "watch": true,
    "strict": true,
    "allowJs": true, // problem with visual studio code import module resolutions if file does not sit inside src/
    "target": "es5",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // "noEmit": true, -- breaks cypress testing - cypress-webpack-preprocessor - node_modules/@cypress/webpack-preprocessor/diest.index.js err.replace
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "stories",
    "@types",
    "__tests__"
  ],
  "exclude": [
    "./node_modules/**/*",
    "archive/*",
    "**/*.spec.ts"
  ] // spec.ts fix in tsconfi.spec.json
}
